{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [],
  "instructions": [],
  "tools": {
    "webfetch": true,
  },
  "permission": {
    "bash": {
      "az *": "ask",
      "bun run tools/db-tool.ts *": "allow",
      "az account show *": "allow",
      "az acr list *": "allow",
      "az aks list *": "allow",
      "az group list *": "allow",
      "az resource list *": "allow",
      "az webapp list *": "allow",
      "az pipelines build list *": "allow",
      "az pipelines build show *": "allow",
      "az pipelines list *": "allow",
      "az pipelines release list *": "allow",
      "az pipelines release show *": "allow",
      "az pipelines runs list *": "allow",
      "az pipelines runs show *": "allow",
      "az pipelines show *": "allow",
      "az pipelines variable list *": "allow",
      "az pipelines variable-group list *": "allow",
      "az pipelines variable-group show *": "allow",
      "gh *": "ask",
      "gh api repos/*/pulls/*/comments": "allow",
      "gh api repos/*/pulls/*/comments -F *": "allow",
      "gh api graphql *query(*": "allow",
      "gh api graphql *mutation(*": "ask",
      "gh issue list *": "allow",
      "gh issue status *": "allow",
      "gh issue view *": "allow",
      "gh pr checks *": "allow",
      "gh pr diff *": "allow",
      "gh pr list *": "allow",
      "gh pr status *": "allow",
      "gh pr view *": "allow",
      "gh release list *": "allow",
      "gh release view *": "allow",
      "gh repo view *": "allow",
      "gh run list *": "allow",
      "gh run view *": "allow",
      "gh run watch *": "allow",
      "gh search *": "allow",
      "gh workflow list *": "allow",
      "gh workflow view *": "allow",
      "git *": "ask",
      "git blame *": "allow",
      "git branch *": "allow",
      "git checkout *": "ask",
      "git commit *": "ask",
      "git diff *": "allow",
      "git fetch *": "allow",
      "git log *": "allow",
      "git merge *": "ask",
      "git pull *": "allow",
      "git push *": "ask",
      "git rebase *": "ask",
      "git remote *": "allow",
      "git reset *": "ask",
      "git revert *": "ask",
      "git show *": "allow",
      "git stash *": "allow",
      "git status": "allow",
      "git status *": "allow",
      "git tag *": "allow",
      "kubectl *": "ask",
      "kubectl config *": "allow",
      "kubectl describe *": "allow",
      "kubectl explain *": "allow",
      "kubectl get *": "allow",
      "kubectl logs *": "allow",
      "kubectl top *": "allow",
      "ls *": "allow",
      "pwd *": "allow",
      "opensrc *": "allow",
      "effect-solutions *": "allow",
    },
  },
  "mcp": {
    "ck": {
      "type": "local",
      "command": [
        "sh",
        "-c",
        "ck --index . --model jina-code && ck --serve",
      ],
    },
    "agentsfera": {
      "type": "remote",
      "url": "https://api.agentsfera.ai",
      "oauth": false,
      "headers": {
        "Authorization": "Bearer {env:OPENCODE_AGENTSFERA_API_KEY}",
      },
    },
    "shadcn": {
      "type": "local",
      "command": ["bunx", "shadcn@latest", "mcp"],
    },
    "sentry": {
      "type": "remote",
      "url": "https://mcp.sentry.dev/mcp",
      "oauth": {},
    },
  },
}
